<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tambah Data Panen"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- Jenis Tanaman -->
            <TextView
                android:text="Jenis Tanaman"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />
            
            <EditText
                android:id="@+id/jenisTanamanEditText"
                android:hint="Contoh: Jagung, Padi, Jati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#999999"
                android:textColor="#333333"/>

            <!-- Jumlah Panen -->
            <TextView
                android:text="Jumlah Panen"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />
            
            <EditText
                android:id="@+id/jumlahPanenEditText"
                android:hint="Masukkan jumlah panen"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#999999"
                android:textColor="#333333"/>

            <!-- Satuan -->
            <TextView
                android:text="Satuan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />
            
            <EditText
                android:id="@+id/satuanEditText"
                android:hint="Contoh: Kg, Ton, Buah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#999999"
                android:textColor="#333333"/>

            <!-- Tanggal Panen -->
            <TextView
                android:text="Tanggal Panen"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />
            
            <EditText
                android:id="@+id/tanggalPanenEditText"
                android:hint="Pilih tanggal panen"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="#999999"
                android:textColor="#333333"/>

            

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:text="Simpan Data"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
