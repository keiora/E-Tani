<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_e_tani"
        android:contentDescription="E-Tani Logo"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di E-Tani!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/welcomeSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi pintar untuk mencatat dan menyimpan hasil panenmu dengan mudah, cepat, dan aman!"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="40dp" />

    <!-- Ajakan Login -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? "
            android:textSize="15sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk Sekarang"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />
    </LinearLayout>

    <!-- Ajakan Daftar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun? "
            android:textSize="15sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Sekarang"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />
    </LinearLayout>

</LinearLayout>