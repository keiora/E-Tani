<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ScrollView untuk isi halaman -->
    <ScrollView
        android:id="@+id/dashboard_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:drawableStart="@android:drawable/ic_menu_search" />


            <!-- Banner -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_tani1"
                        android:contentDescription="Banner promosi E-Tani" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_tani2" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_tani1" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Deskripsi Aplikasi -->
            <TextView
                android:id="@+id/app_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ðŸŒ¾ E-Tani - Setor dan Simpan Hasil Tani Lebih Mudah!\nDengan E-Tani, petani bisa mencatat, menyimpan, dan menyetor hasil tani secara digital. Semua data tersimpan aman dan rapi, memudahkan pencatatan panen serta pengelolaan hasil pertanian. Ayo bertani dengan cara modern!"
                android:textSize="14sp"
                android:textColor="#2E7D32" />

            <!-- Judul -->
            <TextView
                android:text="Popular Items"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Daftar Item -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/padi"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Gambar tanaman padi"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/padi"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/padi"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/latestDataText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum ada data panen"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#000000" />


        </LinearLayout>


    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>
